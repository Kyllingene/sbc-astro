---
import Link from '../components/Link.astro';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/webp" href="/favicon.webp" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="header">
			<nav>
				<ul class="nav">
					<li><Link wnew={false} href="/sbc-astro/">Home</Link></li>
					<li><Link wnew={false} href="/sbc-astro/videos/">Lessons</Link></li>
					<li><Link wnew={false} href="/sbc-astro/gospel/">Good News</Link></li>
					<li><Link wnew={false} href="/sbc-astro/contact/">Contact</Link></li>
				</ul>
			</nav>
		</div>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--accent: 132, 155, 172;
		--emphasis: rgb(176, 220, 238);
		--accent-hover: linear-gradient(45deg, rgb(var(--accent)), #da62c4 30%, white 60%);
	}
	* {
		background-color: #131516;
		color: #d8d4cf;
	}
	html {
		font-family: system-ui, sans-serif;
	}
	main {
        margin: auto;
        padding: 1.5rem;
        max-width: 60ch;
		text-align: center;
    }
    h1 {
        font-size: 3rem;
        font-weight: 800;
        margin: 0;
		text-decoration: underline;
    }
	ul {
        list-style-type: none;
        padding-left: 0;
    }
	.header {
		display: block;
		margin: 2em;
		padding: 1em;
		border: 3px solid rgba(var(--accent), 5%);
		border-radius: 0.25rem;
		text-align: center;
		color: rgb(75, 170, 182);
		font-weight: bold;
		font-size: large;
	}
	.nav li {
		display: inline-block;
		list-style-type: none;
		margin-right: 1em;
	}
    .text-emph {
        color: var(--emphasis);
        background-size: 400%;
        background-position: 0%;
    }

	@media screen and (max-width: 800px) {
		.nav li {
			display: block;
		}
	}
</style>
